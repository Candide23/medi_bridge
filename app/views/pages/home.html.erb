<div class="hero-background d-flex align-items-center justify-content-center text-white">
  <div class="hero-overlay w-100 h-100 d-flex align-items-center justify-content-center">
    <div class="container px-4">
      <div class="row align-items-center">
        <div class="col-lg-6 text-center text-lg-start">
          <h1 class="display-3 fw-bold mb-4 text-shadow">Welcome to MediBridge</h1>
          <p class="lead mb-4 fs-5">Your secure, multilingual health record management platform that breaks language barriers in healthcare.</p>
          
          <div class="hero-features mb-4">
            <div class="d-flex align-items-center mb-2">
              <i class="bi bi-shield-check text-success me-2 fs-5"></i>
              <span>Secure & Private Storage</span>
            </div>
            <div class="d-flex align-items-center mb-2">
              <i class="bi bi-translate text-info me-2 fs-5"></i>
              <span>AI-Powered Translation</span>
            </div>
            <div class="d-flex align-items-center mb-2">
              <i class="bi bi-people text-warning me-2 fs-5"></i>
              <span>Family-Friendly Management</span>
            </div>
          </div>

          <% if user_signed_in? %>
            <%= link_to health_records_path, class: "btn btn-primary btn-lg px-5 py-3 me-3" do %>
              <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: "btn btn-light btn-lg px-5 py-3 me-3" do %>
              <i class="bi bi-rocket-takeoff me-2"></i>Get Started Free
            <% end %>
            <%= link_to new_user_session_path, class: "btn btn-outline-light btn-lg px-4 py-3" do %>
              <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            <% end %>
          <% end %>
        </div>
        
        <div class="col-lg-6 text-center d-none d-lg-block">
          <div class="hero-visual">
            <i class="bi bi-hospital display-1 text-white mb-3 hero-icon"></i>
            <div class="feature-cards">
              <div class="feature-card">
                <i class="bi bi-file-medical"></i>
                <span>Upload Records</span>
              </div>
              <div class="feature-card">
                <i class="bi bi-translate"></i>
                <span>Translate</span>
              </div>
              <div class="feature-card">
                <i class="bi bi-download"></i>
                <span>Download</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- How it Works Section -->
<section class="how-it-works py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-5">
        <h2 class="display-5 fw-bold mb-3">How MediBridge Works</h2>
        <p class="lead text-muted">Simple, secure, and multilingual healthcare document management</p>
      </div>
    </div>
    
    <div class="row g-4">
      <div class="col-md-4">
        <div class="step-card text-center h-100">
          <div class="step-number">1</div>
          <div class="step-icon">
            <i class="bi bi-cloud-upload display-4 text-primary"></i>
          </div>
          <h4 class="mb-3">Upload Your Documents</h4>
          <p class="text-muted">Securely upload medical records, lab results, prescriptions, and other health documents in PDF, JPG, or PNG format.</p>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="step-card text-center h-100">
          <div class="step-number">2</div>
          <div class="step-icon">
            <i class="bi bi-magic display-4 text-info"></i>
          </div>
          <h4 class="mb-3">AI Translation & OCR</h4>
          <p class="text-muted">Our AI automatically extracts text from images and documents, then translates them into your preferred language using Google Translate.</p>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="step-card text-center h-100">
          <div class="step-number">3</div>
          <div class="step-icon">
            <i class="bi bi-people display-4 text-success"></i>
          </div>
          <h4 class="mb-3">Share & Manage</h4>
          <p class="text-muted">Access your translated documents anytime, download them, or switch between original and translated versions effortlessly.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-5">
        <h2 class="display-5 fw-bold mb-3">Powerful Features</h2>
        <p class="lead text-muted">Everything you need for multilingual healthcare management</p>
      </div>
    </div>
    
    <div class="row g-4">
      <div class="col-lg-6">
        <div class="feature-item d-flex">
          <div class="feature-icon me-4">
            <i class="bi bi-translate fs-2 text-primary"></i>
          </div>
          <div>
            <h5 class="mb-2">Multi-Language Support</h5>
            <p class="text-muted mb-0">Translate documents between English, Spanish, French, Portuguese, Arabic, Chinese, and more with AI-powered accuracy.</p>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="feature-item d-flex">
          <div class="feature-icon me-4">
            <i class="bi bi-eye fs-2 text-info"></i>
          </div>
          <div>
            <h5 class="mb-2">OCR Technology</h5>
            <p class="text-muted mb-0">Extract text from scanned documents and images automatically, making them searchable and translatable.</p>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="feature-item d-flex">
          <div class="feature-icon me-4">
            <i class="bi bi-shield-lock fs-2 text-success"></i>
          </div>
          <div>
            <h5 class="mb-2">Secure & Private</h5>
            <p class="text-muted mb-0">Your health information is encrypted and stored securely. Only you have access to your personal medical records.</p>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="feature-item d-flex">
          <div class="feature-icon me-4">
            <i class="bi bi-download fs-2 text-warning"></i>
          </div>
          <div>
            <h5 class="mb-2">Easy Downloads</h5>
            <p class="text-muted mb-0">Download your original documents or translated versions as text files for offline access or sharing with healthcare providers.</p>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="feature-item d-flex">
          <div class="feature-icon me-4">
            <i class="bi bi-phone fs-2 text-danger"></i>
          </div>
          <div>
            <h5 class="mb-2">Mobile Friendly</h5>
            <p class="text-muted mb-0">Access your health records from any device - desktop, tablet, or mobile phone with our responsive design.</p>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="feature-item d-flex">
          <div class="feature-icon me-4">
            <i class="bi bi-clock-history fs-2 text-secondary"></i>
          </div>
          <div>
            <h5 class="mb-2">Version History</h5>
            <p class="text-muted mb-0">Keep track of all your translations and easily switch between original and translated versions of your documents.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="cta-section py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="display-5 fw-bold mb-3">Ready to Bridge Language Barriers in Healthcare?</h2>
        <p class="lead text-muted mb-4">Join thousands of families managing their health records in multiple languages.</p>
        
        <% unless user_signed_in? %>
          <%= link_to new_user_registration_path, class: "btn btn-primary btn-lg px-5 py-3 me-3" do %>
            <i class="bi bi-person-plus me-2"></i>Create Free Account
          <% end %>
          <p class="small text-muted mt-3">No credit card required • Free forever • Secure & private</p>
        <% end %>
      </div>
    </div>
  </div>
</section>




