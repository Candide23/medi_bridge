<div class="hero-background d-flex align-items-center justify-content-center text-white">
  <div class="container text-center">
    <h1 class="display-3 fw-bold mb-4">MediBridge</h1>
    <p class="lead mb-4 fs-4">Never lose critical health documents.<br>Always understand your care instructions.</p>
    
    <div class="row justify-content-center mb-4">
      <div class="col-auto">
        <i class="bi bi-cloud-upload fs-1"></i>
        <p class="small">Upload</p>
      </div>
      <div class="col-auto">
        <i class="bi bi-arrow-right fs-2 mt-3"></i>
      </div>
      <div class="col-auto">
        <i class="bi bi-translate fs-1"></i>
        <p class="small">Translate</p>
      </div>
      <div class="col-auto">
        <i class="bi bi-arrow-right fs-2 mt-3"></i>
      </div>
      <div class="col-auto">
        <i class="bi bi-toggle-on fs-1"></i>
        <p class="small">Toggle</p>
      </div>
    </div>

    <% if user_signed_in? %>
      <%= link_to "Go to Dashboard", health_records_path, class: "btn btn-light btn-lg px-5 py-3" %>
    <% else %>
      <%= link_to "Get Started Free", new_user_registration_path, class: "btn btn-light btn-lg px-5 py-3 me-3" %>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-light btn-lg px-4 py-3" %>
    <% end %>
  </div>
</div>

<section class="py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="fw-bold">Your Health Records, Any Language</h2>
      <p class="text-muted">Secure storage and translation for prescriptions, vaccination cards, and doctor's notes</p>
    </div>

    <div class="row g-4">
      <div class="col-md-4">
        <div class="card h-100 text-center p-4">
          <i class="bi bi-file-earmark-medical display-4 text-primary mb-3"></i>
          <h5>Upload Documents</h5>
          <p class="text-muted">PDF, JPG, or PNG files. Classify as prescription, vaccination card, or doctor's note.</p>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card h-100 text-center p-4">
          <i class="bi bi-translate display-4 text-info mb-3"></i>
          <h5>Translate to Your Language</h5>
          <p class="text-muted">Support for English, Spanish, French, Chinese, Arabic, and more languages.</p>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card h-100 text-center p-4">
          <i class="bi bi-toggle2-on display-4 text-success mb-3"></i>
          <h5>Toggle Between Versions</h5>
          <p class="text-muted">Switch between original and translated content instantly. Never lose the original.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5 bg-light">
  <div class="container text-center">
    <h3 class="fw-bold mb-4">Who Uses MediBridge?</h3>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <p class="lead text-muted">
          <strong>Immigrant families</strong> managing school health forms •
          <strong>Caregivers</strong> helping elderly parents understand prescriptions •
          <strong>Travelers</strong> needing medical care abroad
        </p>
      </div>
    </div>
    
    <% unless user_signed_in? %>
      <div class="mt-5">
        <%= link_to "Start Managing Your Health Records", new_user_registration_path, 
            class: "btn btn-primary btn-lg px-5 py-3" %>
        <p class="small text-muted mt-3">Free • Secure • Private</p>
      </div>
    <% end %>
  </div>
</section>






