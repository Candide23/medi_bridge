<div class="hero-background d-flex align-items-center justify-content-center text-white text-center">
  <div class="hero-overlay w-100 h-100 d-flex align-items-center justify-content-center">
    <div class="container px-4">
      <h1 class="display-4 fw-bold mb-3 text-shadow">Welcome to MediBridge</h1>
      <p class="lead mb-4">Secure multilingual health record management for families.</p>

      <% if user_signed_in? %>
        <%= link_to "Go to Dashboard", health_records_path, class: "btn btn-primary btn-lg px-5 py-2" %>
      <% else %>
        <%= link_to "Get Started", new_user_registration_path, class: "btn btn-outline-light btn-lg px-5 py-2" %>
      <% end %>
    </div>
  </div>
</div>




