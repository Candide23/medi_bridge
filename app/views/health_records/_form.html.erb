<%= form_with(model: health_record, local: true, html: { multipart: true }) do |f| %>
  <% if health_record.errors.any? %>
    <div class="alert alert-danger">
      <%= health_record.errors.full_messages.to_sentence %>
    </div>
  <% end %>

  <div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-white"><h5 class="mb-0 fw-semibold">Upload Health Record</h5></div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.label :record_type, class: "form-label fw-semibold" %>
          <%= f.text_field :record_type, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :language, class: "form-label fw-semibold" %>
          <%= f.text_field :language, class: "form-control" %>
        </div>
        <div class="col-12">
          <%= f.label :document, "Attach Document", class: "form-label fw-semibold" %>
          <%= f.file_field :document, class: "form-control", direct_upload: true, accept: ".pdf,image/*,text/plain" %>
        </div>
      </div>
    </div>
    <div class="card-footer bg-white d-flex justify-content-end gap-2">
      <%= link_to "Cancel", health_records_path, class: "btn btn-outline-secondary" %>
      <%= f.submit (health_record.new_record? ? "Upload" : "Update"), class: "btn btn-primary px-4" %>
    </div>
  </div>
<% end %>




