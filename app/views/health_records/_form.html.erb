<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light py-5 px-3">
  <div class="card shadow-sm p-4 rounded-3 w-100" style="max-width: 700px;">
    <!-- Header -->
    <h2 class="fw-bold text-center mb-1">Upload New Health Record</h2>
    <p class="text-muted text-center mb-4">Securely store and translate your medical documents</p>

    <!-- Form -->
    <%= form_with model: @health_record, local: true, html: { multipart: true } do |form| %>
      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <%= form.label :record_type, "Record Type", class: "form-label fw-semibold" %>
          <%= form.select :record_type, HealthRecord::RECORD_TYPES, {}, class: "form-select", required: true %>
        </div>
        <div class="col-md-6">
          <%= form.label :language, "Original Language", class: "form-label fw-semibold" %>
          <%= form.select :language, HealthRecord::SUPPORTED_LANGUAGES, {}, class: "form-select", required: true %>
        </div>
      </div>

      <div class="mb-4">
        <%= form.label :document, "Upload Document", class: "form-label fw-semibold" %>
        <%= form.file_field :document, class: "form-control", accept: ".pdf,image/*,.txt", required: true %>
        <div class="form-text">Max 25MB. Accepted: PDF, JPG, PNG, JPEG, or TXT</div>
      </div>

      <!-- Actions -->
      <div class="d-flex justify-content-between">
        <%= link_to "Cancel", health_records_path, class: "btn btn-outline-secondary" %>
        <%= form.submit "Upload Record", class: "btn btn-primary px-4" %>
      </div>
    <% end %>
  </div>
</div>







