<div class="animated-gradient d-flex align-items-center justify-content-center">
  <div class="card glass-card p-4" style="max-width: 700px; width: 100%;">
    <h2 class="fw-bold text-center mb-1">New Health Record</h2>
    <p class="text-center text-muted mb-4">Upload and organize your medical documents securely</p>

    <%= form_with(model: health_record, local: true, html: { multipart: true }) do |form| %>
      <div class="mb-4">
        <h5 class="fw-semibold">Record Information</h5>
        <div class="row g-3">
          <div class="col-md-6">
            <%= form.label :record_type, "Record Type", class: "form-label" %>
            <%= form.select :record_type, options_for_select(HealthRecord::RECORD_TYPES), {}, class: "form-select" %>
          </div>
          <div class="col-md-6">
            <%= form.label :language, "Language", class: "form-label" %>
            <%= form.select :language, options_for_select(HealthRecord::LANGUAGES), {}, class: "form-select" %>
          </div>
        </div>
      </div>

      <div class="mb-4">
        <h5 class="fw-semibold">Document Upload</h5>
        <div class="border border-dashed border-2 rounded p-4 text-center bg-light">
          <i class="bi bi-upload display-4 text-primary"></i>
          <p class="fw-semibold mb-1">Drag & drop your file here</p>
          <p class="text-muted small mb-2">or click to browse files</p>
          <%= form.file_field :document, class: "form-control" %>
          <p class="small text-muted mt-2">Max 25 MB. Supported formats: PDF, PNG, JPG, JPEG, TXT.</p>
        </div>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-4">
        <%= link_to "Cancel", health_records_path, class: "btn btn-outline-secondary" %>
        <%= form.submit "Upload Record", class: "btn btn-primary px-4" %>
      </div>
    <% end %>
  </div>
</div>







