<!-- app/views/health_records/index.html.erb -->
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Your Health Records</h2>
    <%= link_to new_health_record_path, class: "btn btn-success" do %>
      <i class="bi bi-plus-circle me-1"></i> Upload New Record
    <% end %>
  </div>

  <% if @health_records.any? %>
    <div class="row g-3">
      <% @health_records.each do |record| %>
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-body">
              <!-- Badges -->
              <div class="d-flex align-items-center mb-3">
                <span class="badge bg-dark text-uppercase me-2"><%= record.record_type %></span>
                <span class="badge bg-secondary me-2"><%= record.language_name %></span>
                <% if record.translations.any? %>
                  <span class="badge bg-info">
                    <i class="bi bi-translate"></i> <%= record.translations.count %>
                  </span>
                <% end %>
              </div>
              
              <!-- File Info -->
              <div class="mb-3">
                <% if record.document.attached? %>
                  <i class="bi bi-file-earmark-text me-1"></i>
                  <strong><%= record.document.filename.to_s %></strong>
                  <div class="text-muted small">
                    <%= number_to_human_size(record.document.byte_size) %> â€¢ 
                    <%= record.created_at.strftime("%B %d, %Y") %>
                  </div>
                <% else %>
                  <i class="bi bi-file-earmark-x me-1"></i> No file attached
                  <div class="text-muted small">
                    <%= record.created_at.strftime("%B %d, %Y") %>
                  </div>
                <% end %>
              </div>
              
              <!-- Action Buttons -->
              <div class="d-flex gap-2">
                <%= link_to health_record_path(record), class: "btn btn-outline-primary btn-sm" do %>
                  <i class="bi bi-eye"></i> View
                <% end %>
                
                <% if record.document.attached? %>
                  <%= link_to rails_blob_path(record.document, disposition: "attachment"), 
                              class: "btn btn-outline-secondary btn-sm", 
                              target: "_blank" do %>
                    <i class="bi bi-download"></i>
                  <% end %>
                <% end %>
                
                <%= link_to edit_health_record_path(record), class: "btn btn-outline-secondary btn-sm" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                
                <%= button_to health_record_path(record), 
                              method: :delete, 
                              data: { turbo_confirm: "Delete this record and all translations?" }, 
                              class: "btn btn-outline-danger btn-sm",
                              form: { style: "display: inline;" } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card">
      <div class="card-body text-center py-5">
        <i class="bi bi-folder2-open display-1 text-muted mb-3"></i>
        <h4>No health records yet</h4>
        <p class="text-muted mb-4">Upload your first document to get started</p>
        <%= link_to "Upload New Record", new_health_record_path, class: "btn btn-success btn-lg" %>
      </div>
    </div>
  <% end %>
</div>








