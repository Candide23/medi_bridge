
<!-- This is app/views/health_records/index.html.erb -->
<div class="min-vh-100 py-5 px-3 d-flex flex-column align-items-center bg-light">
  <div class="container" style="max-width: 900px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold text-dark">Your Health Records</h2>
      <%= link_to new_health_record_path, class: "btn btn-success" do %>
        <i class="bi bi-plus-circle me-1"></i> Upload New Record
      <% end %>
    </div>

    <% if @health_records.any? %>
      <% @health_records.each do |record| %>
        <div class="card mb-4 border rounded shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <span class="badge text-bg-dark text-uppercase fw-semibold">
                  <%= record.record_type %>
                </span>
                <span class="badge bg-secondary-subtle text-dark ms-2">
                  <%= record.language_name %>
                </span>
                <% if record.translations.any? %>
                  <span class="badge bg-info-subtle text-dark ms-2">
                    <i class="bi bi-translate"></i> <%= record.translations.count %> translations
                  </span>
                <% end %>
              </div>
              <small class="text-muted">
                <%= record.created_at.strftime("%B %d, %Y") %>
              </small>
            </div>
            
            <div class="mt-3 text-muted">
              <% if record.document.attached? %>
                <i class="bi bi-file-earmark-text me-1"></i>
                <%= record.document.filename.to_s %>
                <span class="text-muted ms-2">
                  (<%= number_to_human_size(record.document.byte_size) %>)
                </span>
              <% else %>
                <i class="bi bi-file-earmark-x me-1"></i> No file attached
              <% end %>
            </div>

            <div class="d-flex flex-wrap gap-2 mt-3">
              <%= link_to health_record_path(record), class: "btn btn-outline-dark btn-sm" do %>
                <i class="bi bi-eye me-1"></i> View
              <% end %>
              
              <% if record.document.attached? %>
                <%= link_to rails_blob_path(record.document, disposition: "attachment"), 
                            class: "btn btn-outline-secondary btn-sm", 
                            target: "_blank" do %>
                  <i class="bi bi-download me-1"></i> Download
                <% end %>
              <% end %>
              
              <%= link_to edit_health_record_path(record), class: "btn btn-outline-secondary btn-sm" do %>
                <i class="bi bi-pencil-square me-1"></i> Edit
              <% end %>
              
              <button type="button" 
                      class="btn btn-outline-danger btn-sm" 
                      data-bs-toggle="modal" 
                      data-bs-target="#deleteModal<%= record.id %>">
                <i class="bi bi-trash me-1"></i> Delete
              </button>
            </div>
          </div>
        </div>
        
        <!-- Delete Confirmation Modal for each record - USES 'record' NOT '@health_record' -->
        <div class="modal fade" id="deleteModal<%= record.id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= record.id %>" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header border-0">
                <h5 class="modal-title" id="deleteModalLabel<%= record.id %>">
                  <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
                  Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="text-center mb-3">
                  <i class="bi bi-file-earmark-medical text-muted" style="font-size: 3rem;"></i>
                </div>
                <p class="text-center mb-3">
                  Are you sure you want to delete this health record?
                </p>
                <div class="alert alert-light">
                  <strong>Record Type:</strong> <%= record.record_type %><br>
                  <strong>Language:</strong> <%= record.language_name %><br>
                  <% if record.document.attached? %>
                    <strong>File:</strong> <%= record.document.filename.to_s %>
                  <% end %>
                  <% if record.translations.any? %>
                    <br><strong class="text-danger">Warning:</strong> This will also delete <%= record.translations.count %> translation(s)
                  <% end %>
                </div>
                <p class="text-muted small text-center mt-3">
                  <i class="bi bi-info-circle me-1"></i>
                  This action cannot be undone.
                </p>
              </div>
              <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <%= button_to health_record_path(record), 
                              method: :delete, 
                              class: "btn btn-danger" do %>
                  <i class="bi bi-trash me-1"></i> Delete Record
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-secondary text-center rounded shadow-sm">
        <i class="bi bi-folder2-open display-1 text-muted mb-3"></i>
        <h5 class="mb-2">No health records yet</h5>
        <p class="text-muted">Click below to upload your first document.</p>
        <%= link_to "Upload New Record", new_health_record_path, class: "btn btn-success px-4" %>
      </div>
    <% end %>
  </div>
</div>








