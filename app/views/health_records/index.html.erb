<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0">Health Records Dashboard</h2>
    <%= link_to "Upload Record", new_health_record_path, class: "btn btn-primary px-4" %>
  </div>

  <% if @health_records.any? %>
    <div class="table-responsive shadow rounded">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-primary">
          <tr>
            <th>Record Type</th>
            <th>Language</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @health_records.each do |record| %>
            <tr>
              <td><%= record.record_type.titleize %></td>
              <td><%= record.language.upcase %></td>
              <td class="text-center">
                <%= link_to "View", health_record_path(record), class: "btn btn-outline-primary btn-sm me-2" %>
                <%= link_to "Delete", record, method: :delete, data: { confirm: "Are you sure you want to delete this record?" }, class: "btn btn-outline-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-4">
      No health records found. Click <strong>"Upload Record"</strong> to get started.
    </div>
  <% end %>
</div>
