<thead class="table-light">
  <tr>
    <th>Document Type</th>
    <th>Language</th>
    <th>File</th>
    <th class="text-center">Actions</th>
  </tr>
</thead>
<tbody>
  <% @health_records.each do |record| %>
    <tr>
      <td><%= record.record_type %></td>
      <td><%= record.language %></td>
      <td>
        <% if record.document.attached? %>
          <%= link_to "Download",
              rails_blob_path(record.document, disposition: "attachment"),
              class: "btn btn-sm btn-outline-primary" %>
        <% else %>
          <span class="text-muted">No file</span>
        <% end %>
      </td>
      <td class="text-center">
        <%= link_to "Show", record, class: "btn btn-sm btn-light" %>
        <%= link_to "Edit", edit_health_record_path(record), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "Delete", record, data: { turbo_method: :delete, turbo_confirm: "Delete this record?" }, class: "btn btn-sm btn-outline-danger" %>
      </td>
    </tr>
  <% end %>
</tbody>

