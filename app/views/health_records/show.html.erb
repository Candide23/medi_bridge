<div class="container mt-4 translation-feature">
  <div class="row">
    <div class="col-md-12">

      <!-- Header with language info -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2>
            <span class="badge bg-primary me-2"><%= @health_record.record_type %></span>
            <span class="badge bg-secondary"><%= @health_record.language_name %></span>
          </h2>
          <small class="text-muted">
            Uploaded <%= @health_record.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </small>
        </div>

        <!-- Language Toggle -->
        <div class="dropdown">
          <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            <i class="bi bi-globe me-1"></i>
            View: <%= language_name(@current_view_language) %>
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to toggle_view_health_record_path(@health_record, language: @health_record.language), class: "dropdown-item" do %>
                <i class="bi bi-file-text me-1"></i> Original (<%= @health_record.language_name %>)
              <% end %>
            </li>
            <% if @available_translations.any? %>
              <li><hr class="dropdown-divider"></li>
              <% @available_translations.each do |lang| %>
                <li>
                  <%= link_to toggle_view_health_record_path(@health_record, language: lang), class: "dropdown-item" do %>
                    <i class="bi bi-translate me-1"></i> <%= language_name(lang) %>
                  <% end %>
                </li>
              <% end %>
            <% end %>
            <li><hr class="dropdown-divider"></li>
            <li>
              <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#translateModal">
                <i class="bi bi-plus-circle me-1"></i> Translate to new language...
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Translation Banner -->
      <% if @translation %>
        <div class="alert alert-info d-flex align-items-center mb-4">
          <i class="bi bi-translate me-2"></i>
          Viewing translation from <%= @health_record.language_name %> to <%= language_name(@current_view_language) %>
        </div>
      <% end %>

      <!-- Content Panels -->
      <div class="row content-panels">
        <!-- Original -->
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <div class="card-header bg-light">
              <h5 class="mb-0"><i class="bi bi-file-earmark-text me-1"></i> Original Document</h5>
            </div>
            <div class="card-body">
              <% if @health_record.document.attached? %>
                <p class="mb-2">
                  <strong>File:</strong> <%= @health_record.document.filename %>
                  <span class="text-muted">(<%= number_to_human_size(@health_record.document.byte_size) %>)</span>
                </p>
                <%= link_to rails_blob_path(@health_record.document, disposition: "attachment"), class: "btn btn-sm btn-outline-primary", target: "_blank" do %>
                  <i class="bi bi-download me-1"></i> Download Original
                <% end %>

                <% if @health_record.text_cache.present? %>
                  <hr>
                  <h6><i class="bi bi-text-paragraph me-1"></i> Extracted Text:</h6>
                  <div class="extracted-text bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;">
                    <%= simple_format(@health_record.text_cache.gsub(/\[DEMO OCR\]\s*/, '')) %>
                  </div>
                <% end %>
              <% else %>
                <p class="text-muted"><i class="bi bi-file-earmark-x me-1"></i>No document attached</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Translated -->
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
              <h5 class="mb-0"><i class="bi bi-translate me-1"></i> Translation</h5>
              <% if @translation %>
                <div class="btn-group">
                  <%= link_to download_translation_path(@translation), class: "btn btn-sm btn-outline-success" do %>
                    <i class="bi bi-download me-1"></i> Download
                  <% end %>
                  <%= link_to translation_path(@translation), class: "btn btn-sm btn-outline-info" do %>
                    <i class="bi bi-info-circle me-1"></i> Details
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="card-body">
              <% if @translation %>
                <div class="translation-content bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;">
                  <%= simple_format(@translation.content.gsub(/\[DEMO TRANSLATION\]\s*/, '')) %>
                </div>
                <hr>
                <small class="text-muted">
                  <strong>ID:</strong> <%= @translation.id %> |
                  <strong>Created:</strong> <%= @translation.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </small>
              <% else %>
                <div class="text-center py-4">
                  <i class="bi bi-translate display-4 text-muted mb-3"></i>
                  <p class="text-muted">No translation available yet.</p>
                  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#translateModal">
                    <i class="bi bi-plus-circle me-1"></i> Request Translation
                  </button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Translations Summary -->
      <% if @health_record.translations.any? %>
        <div class="card mt-4">
          <div class="card-header bg-light">
            <h6 class="mb-0"><i class="bi bi-collection me-1"></i> All Available Translations</h6>
          </div>
          <div class="card-body">
            <div class="row">
              <% @health_record.translations.each do |translation| %>
                <div class="col-md-4 mb-2">
                  <div class="d-flex justify-content-between align-items-center p-2 border rounded">
                    <span><i class="bi bi-translate me-1"></i> <%= translation.language_name %></span>
                    <div>
                      <%= link_to toggle_view_health_record_path(@health_record, language: translation.language), class: "btn btn-sm btn-outline-primary me-1" do %>
                        <i class="bi bi-eye"></i> View
                      <% end %>
                      <%= link_to download_translation_path(translation), class: "btn btn-sm btn-outline-success" do %>
                        <i class="bi bi-download"></i>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="mt-4 d-flex gap-2">
        <%= link_to edit_health_record_path(@health_record), class: "btn btn-warning" do %>
          <i class="bi bi-pencil-square me-1"></i> Edit Record
        <% end %>
        <%= link_to health_records_path, class: "btn btn-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i> Back to Records
        <% end %>
        <%= button_to health_record_path(@health_record),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this record and all its translations?" },
                      class: "btn btn-outline-danger" do %>
          <i class="bi bi-trash me-1"></i> Delete
        <% end %>
      </div>

    </div>
  </div>
</div>

<!-- Translation Modal -->
<div class="modal fade" id="translateModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with url: translate_health_record_path(@health_record), method: :post, local: true do |f| %>
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-translate me-1"></i> Request Translation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="target_locale" class="form-label">Target Language</label>
            <%= select_tag :target_locale,
                  options_for_select(
                    HealthRecord::SUPPORTED_LANGUAGES.reject { |_, code|
                      code == @health_record.language || @available_translations.include?(code)
                    }
                  ),
                  class: "form-select", required: true %>
            <small class="form-text text-muted">Select a language you haven't translated this document into yet.</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Start Translation", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
