<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">

      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2>
            <span class="badge bg-primary"><%= @health_record.record_type %></span>
            <span class="badge bg-secondary"><%= @health_record.language_name %></span>
          </h2>
          <small class="text-muted">
            Uploaded <%= @health_record.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </small>
        </div>
      </div>

      <!-- Panels -->
      <div class="row">
        <!-- Original -->
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <div class="card-header bg-light">
              <h5 class="mb-0"><i class="bi bi-file-earmark-text me-1"></i> Original</h5>
            </div>
            <div class="card-body">
              <% if @health_record.document.attached? %>
                <p>
                  <strong>File:</strong> <%= @health_record.document.filename %>
                  <span class="text-muted">(<%= number_to_human_size(@health_record.document.byte_size) %>)</span>
                </p>
                <%= link_to rails_blob_path(@health_record.document, disposition: "attachment"),
                            class: "btn btn-sm btn-outline-primary", target: "_blank" do %>
                  <i class="bi bi-download me-1"></i> Download
                <% end %>
              <% else %>
                <p class="text-muted">No document attached</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Translation -->
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <div class="card-header bg-light">
              <h5 class="mb-0"><i class="bi bi-translate me-1"></i> Translation</h5>
            </div>
            <div class="card-body">
              <% if @translation %>
                <div class="bg-light p-3 rounded">
                  <%= simple_format(@translation.content.gsub(/\[DEMO TRANSLATION\]\s*/, '')) %>
                </div>
              <% else %>
                <p class="text-muted">No translation available.</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#translateModal">
                  <i class="bi bi-plus-circle me-1"></i> Request Translation
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-4 d-flex gap-2">
        <%= link_to edit_health_record_path(@health_record), class: "btn btn-warning" do %>
          <i class="bi bi-pencil-square me-1"></i> Edit
        <% end %>
        <%= link_to health_records_path, class: "btn btn-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i> Back
        <% end %>
        <!-- Trigger Modal -->
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteRecordModal">
          <i class="bi bi-trash me-1"></i> Delete
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteRecordModal" tabindex="-1" aria-labelledby="deleteRecordModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-3">
      
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title d-flex align-items-center" id="deleteRecordModalLabel">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
          Confirm Deletion
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body text-center">
        <i class="bi bi-trash display-3 text-danger mb-3"></i>
        <p class="fs-5">
          Are you sure you want to <strong>delete this record</strong> 
          and all of its translations?
        </p>
        <p class="text-muted mb-0">
          This action <span class="fw-bold text-danger">cannot</span> be undone.
        </p>
      </div>

      <div class="modal-footer d-flex justify-content-between">
        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
          Cancel
        </button>

        <!-- Rails DELETE form -->
        <%= form_with url: health_record_path(@health_record), method: :delete, data: { turbo: true } do |f| %>
          <%= f.submit "Delete Permanently", class: "btn btn-danger px-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Translation Modal (keep if you support translations) -->
<div class="modal fade" id="translateModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with url: translate_health_record_path(@health_record), method: :post, local: true do |f| %>
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-translate me-1"></i> Request Translation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="target_locale" class="form-label">Target Language</label>
            <%= select_tag :target_locale,
                  options_for_select(
                    HealthRecord::SUPPORTED_LANGUAGES.reject { |_, code|
                      code == @health_record.language || @available_translations.include?(code)
                    }
                  ),
                  class: "form-select", required: true %>
            <small class="form-text text-muted">Select a language not yet translated.</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Start Translation", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
