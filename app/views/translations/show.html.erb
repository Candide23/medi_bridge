<div class="container mt-4">
  <h3>Translation Details</h3>
  <p><strong>Language:</strong> <%= @translation.language_name %></p>
  <p><strong>Created:</strong> <%= @translation.created_at.strftime("%B %d, %Y %I:%M %p") %></p>

  <div class="card mt-3">
    <div class="card-header d-flex justify-content-between align-items-center">
      <span>Content</span>
      <%= link_to "Download", download_translation_path(@translation), class: "btn btn-sm btn-outline-success" %>
    </div>
    <div class="card-body" style="max-height: 400px; overflow-y: auto;">
      <%= simple_format(@translation.content.to_s) %>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Back to Record", health_record_path(@translation.health_record), class: "btn btn-secondary" %>
  </div>
</div>

