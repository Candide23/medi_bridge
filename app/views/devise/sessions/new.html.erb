<div class="auth-background d-flex align-items-center justify-content-center min-vh-100">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-5 col-lg-4">
        <div class="auth-card glass-card">
          <!-- Header -->
          <div class="auth-header text-center mb-4">
            <div class="auth-icon mb-3">
              <i class="bi bi-hospital-fill text-primary"></i>
            </div>
            <h2 class="auth-title">Welcome back</h2>
            <p class="auth-subtitle text-muted">Sign in to your MediBridge account</p>
          </div>

          <!-- Form -->
          <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "auth-form") do |f| %>
            <div class="form-floating mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control auth-input", id: "floatingEmail", placeholder: "name@example.com" %>
              <label for="floatingEmail">
                <i class="bi bi-envelope me-2"></i>Email address
              </label>
            </div>

            <div class="form-floating mb-3">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control auth-input", id: "floatingPassword", placeholder: "Password" %>
              <label for="floatingPassword">
                <i class="bi bi-lock me-2"></i>Password
              </label>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <label class="form-check-label" for="<%= resource_name %>_remember_me">
                  Remember me
                </label>
              </div>
            <% end %>

            <div class="d-grid mb-3">
              <%= f.submit "Sign in to your account", class: "btn btn-primary btn-lg auth-submit" %>
            </div>

            <!-- Links -->
            <div class="auth-links text-center">
              <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "auth-link" %>
              <% end %>
              
              <div class="auth-divider">
                <span>Don't have an account?</span>
              </div>
              
              <% if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Create one now", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




