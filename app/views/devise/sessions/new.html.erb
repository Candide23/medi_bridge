<!-- app/views/devise/sessions/new.html.erb -->

<div class="auth-background pattern-bg">
  <div class="container py-5 d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 p-4 rounded auth-container">

        <!-- Header -->
        <div class="text-center mb-4">
          <i class="bi bi-hospital-fill fs-1 text-primary mb-2"></i>
          <h2 class="fw-bold text-primary">Welcome back</h2>
          <p class="text-muted">Sign in to your MediBridge account</p>
        </div>

        <!-- Login Form -->
        <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>

          <div class="form-floating mb-3">
            <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "form-control",
              id: "floatingEmail",
              placeholder: "name@example.com" %>
            <label for="floatingEmail">
              <i class="bi bi-envelope me-2"></i>Email address
            </label>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password,
              autocomplete: "current-password",
              class: "form-control",
              id: "floatingPassword",
              placeholder: "Password" %>
            <label for="floatingPassword">
              <i class="bi bi-lock me-2"></i>Password
            </label>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
              <label class="form-check-label" for="remember_me">Remember me</label>
            </div>
          <% end %>

          <div class="d-grid mb-3">
            <%= f.submit "Sign in", class: "btn btn-primary btn-lg" %>
          </div>

          <!-- Links -->
          <div class="text-center">
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none d-block mb-2" %>
            <% end %>

            <% if devise_mapping.registerable? && controller_name != 'registrations' %>
              <span class="text-muted">Don't have an account?</span>
              <div class="mt-2">
                <%= link_to "Create one", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
              </div>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>





