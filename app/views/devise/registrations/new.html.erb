<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #6e8efb, #a777e3); padding: 2rem;">
  <div class="bg-white rounded-4 shadow p-5" style="max-width: 460px; width: 100%;">
    <h2 class="text-center fw-bold mb-1">Create your account</h2>
    <p class="text-center text-muted mb-4">Join MediBridge and take control of your health records</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col mb-3">
          <%= f.label :first_name, class: "form-label fw-semibold" %>
          <%= f.text_field :first_name, placeholder: "First name", class: "form-control rounded-3 px-3 py-2" %>
        </div>
        <div class="col mb-3">
          <%= f.label :last_name, class: "form-label fw-semibold" %>
          <%= f.text_field :last_name, placeholder: "Last name", class: "form-control rounded-3 px-3 py-2" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :email, "Email address", class: "form-label fw-semibold" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "Enter your email", class: "form-control rounded-3 px-3 py-2" %>
      </div>

      <div class="mb-3">
        <%= f.label :preferred_language, "Preferred language", class: "form-label fw-semibold" %>
        <%= f.select :preferred_language, options_for_select(["English", "Spanish", "French", "Arabic"]), {}, class: "form-select rounded-3 px-3 py-2" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label fw-semibold" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Create a password", class: "form-control rounded-3 px-3 py-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm password", class: "form-label fw-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password", class: "form-control rounded-3 px-3 py-2" %>
      </div>

      <%= f.submit "Create your account", class: "btn btn-success w-100 fw-semibold py-2" %>
    <% end %>

    <div class="text-center mt-4">
      <span class="text-muted">Already have an account?</span>
      <%= link_to "Sign in here", new_session_path(resource_name), class: "fw-semibold text-decoration-none text-primary" %>
    </div>
  </div>
</div>



